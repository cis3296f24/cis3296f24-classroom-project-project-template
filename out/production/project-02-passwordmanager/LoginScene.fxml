<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <Label alignment="CENTER" layoutX="76.0" layoutY="56.0" prefHeight="30.0" prefWidth="448.0" text="Login to your Password Manager Account!">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="125.0" layoutY="92.0" prefHeight="174.0" prefWidth="350.0" spacing="10.0">
         <children>
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Region prefHeight="20.0" prefWidth="350.0" />
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#loginButtonClicked" text="Login" />
            <Region prefHeight="12.0" prefWidth="350.0" />
            <Hyperlink onAction="#createAccLinkClicked" text="Don't have an account? Create a new one here!" />
            <Label fx:id="loginResultLabel" text="" textFill="black" />
         </children>
      </VBox>
   </children>
</AnchorPane>
